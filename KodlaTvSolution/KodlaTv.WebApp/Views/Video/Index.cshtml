@using KodlaTv.WebApp
@model IEnumerable<KodlaTv.Entities.Video>

@{
    ViewBag.Title = "Yayınlar";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            <a href="/Video/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span>
                Ekle
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Videoinfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Youtubeurl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Channel.ChannelName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Levelofvideo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Watchnumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Likenumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifyDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Videoinfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Youtubeurl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Channel.ChannelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Levelofvideo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Watchnumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Likenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifyDate)
                    </td>
                    <td>
                        @Bootstrap.LinkButton("/Video/Edit/" + item.id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                        @Bootstrap.LinkButton("/Video/Details/" + item.id, "info", "btn-xs", "Detaylar", "search", string.Empty)
                        @Bootstrap.LinkButton("/Video/Delete/" + item.id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>