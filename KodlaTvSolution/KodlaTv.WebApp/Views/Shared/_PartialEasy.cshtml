
@using KodlaTv.WebApp
@using KodlaTv.Entities
@{
    IEnumerable<Video> vidgeri = null;
    vidgeri = Session["BaşlangıçSeviyeYayın"] as IEnumerable<Video>;
}
<section id="main-info" class="container">
    <div>
        <a href="/Video/ListAllEasy"><h2 style="text-align: center; color: black;text-shadow:1px 1px white"> Başlangıç Seviyesi Yayınlar </h2></a>

        <div class="row">
            @foreach (Video videoeasy in vidgeri.Take(6))
            {
                <div class="col-sm-2 wow fadeIn" data-wow-delay="0.4s">
                    <hr class="line purple">
                    <iframe type="text/html" width="168" height="100" src="@videoeasy.Youtubeurl" frameborder="0"></iframe>
                    <a href="/Channel/Userchannel/@videoeasy.Channel.Owner.id" style="position:absolute; top:0; left:0; display:inline-block; width:168px; height:100px; z-index:5;"></a>
                    @if (string.IsNullOrEmpty(videoeasy.Videoinfo) == false && videoeasy.Videoinfo.Length > 27)
                    {
                        <h4 style="text-shadow:1px 1px white">@(videoeasy.Videoinfo.Substring(0, 27) + "...")</h4>
                    }
                    else
                    {
                        <h4 style="text-shadow:1px 1px white">@videoeasy.Videoinfo</h4>
                    }
                    <p style="font-weight: bold;text-shadow:1px 1px white">izleyici sayısı:@videoeasy.Watchnumber</p>
                </div>
            }
        </div>
    </div>
</section>

