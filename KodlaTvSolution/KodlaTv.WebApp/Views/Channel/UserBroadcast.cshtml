@using KodlaTv.WebApp

@model KodlaTv.Entities.Video

@{
    ViewBag.Title = "Yayına Başla";
    
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("UserBroadcast", "Channel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Yayın</h4>
                <hr />
                @Html.ValidationSummary(false)
                <div class="form-group">
                    @Html.LabelFor(model => model.Videoinfo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Videoinfo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Youtubeurl, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Youtubeurl, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Levelofvideo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Levelofvideo, new SelectList(ViewBag.Levelofvideo, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.Category.id, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Category.id, new SelectList(ViewBag.Categoryid, "Value", "Text"), htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Bootstrap.Button("success", string.Empty, "submit", "plus", " Kaydet")
                        @Bootstrap.LinkButton("/Home", "default", string.Empty, string.Empty, "arrow-left", " Ana Sayfa")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
